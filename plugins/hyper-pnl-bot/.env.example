WALLETS=0x63a5f92392e64a363f33aa10002624732c0ae2e0

# Time to run daily report (Format: HH:MM in UTC)
# Example: 00:00 UTC = 07:00 AM VN
# Example: 17:00 UTC = 00:00 AM VN (Midnight)
PNL_INTERVAL_TIME=09:54
# Lookback window for PnL calculation
PNL_WINDOW=24h

TELEGRAM_BOT_TOKEN=
TELEGRAM_ADMIN_CHAT_ID=

# Set to 1 to run immediately on startup, 0 to wait for schedule
ALERT_INIT=1

# Hourly Happy Alert: Send alert if PnL in last 24h > this value (set 0 to disable)
HAPPY_PNL=100

# Hourly Stop Loss Alert: Send alert if PnL in last 24h < this value (set 0 to disable)
# Example: -40 means alert when losing more than 40 USDC
STOP_LOSS_PNL=-40

# Redis Configuration (Required for alert deduplication)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USERNAME=default
REDIS_DATABASE=0
REDIS_FAMILY=0